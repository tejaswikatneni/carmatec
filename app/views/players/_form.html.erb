<div class="panel-body">
	<%= form_for(@player) do |f| %>
		<div class="field">
			<%= f.label :name %><br>
			<%= f.text_field :name, class: 'form-control' %>
		</div>
		<div class="field">
			<%= f.label :score %><br>
			<%= f.number_field :score, class: 'form-control', min: 0 %>
		</div>
		<div class="actions text-center">
			<%= f.submit class: 'btn btn-success' %>
		</div>
	<% end %>
</div>
